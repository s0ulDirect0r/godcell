{
  "name": "godcell",
  "version": "0.1.0",
  "description": "A game of transcendence and evolution",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "imports": {
    "#shared": "./shared/index.ts",
    "#shared/*": "./shared/*"
  },
  "scripts": {
    "dev": "concurrently -n server,client -c blue,green \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch server/src/index.ts",
    "dev:client": "vite client",
    "playground": "concurrently -n server,client -c blue,green \"PORT=3001 PLAYGROUND=true tsx watch server/src/index.ts\" \"npm run dev:client\"",
    "build": "npm run build:server && npm run build:client",
    "build:server": "node server/build.mjs",
    "build:client": "vite build client",
    "start": "node dist/server/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "rm -rf dist node_modules",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\""
  },
  "dependencies": {
    "lil-gui": "^0.21.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "pino-roll": "^4.0.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "three": "^0.160.0",
    "three-stdlib": "^2.36.1"
  },
  "devDependencies": {
    "@beads/bd": "^0.24.3",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.10.6",
    "@types/three": "^0.160.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.25.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.10",
    "prettier": "^3.7.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^6.2.0",
    "vitest": "^4.0.0"
  }
}
